{
    "type": "library",
    "name": "codealchemy/wisdom",
    "description": "A Symfony Config-based configuration loader.",
    "homepage": "http://github.com/codealchemy/Wisdom",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Herrera",
            "email": "kherrera@codealchemy.com"
        }
    ],

    "require": {
        "php": ">=5.3.3",
        "symfony/config": "2.1.*"
    },
    
    "require-dev": {
        "silex/silex": "1.0.*",
        "symfony/yaml": "2.1.*"
    },
    
    "suggest": {
        "symfony/yaml": "2.1.*"
    },

    "autoload": {
        "psr-0": {
            "CODEAlchemy\\Wisdom": "src/lib/"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
